<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:src="@mipmap/logoss"
        android:layout_marginLeft="20dp" />









    <RelativeLayout
        android:id="@+id/my_ph"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"

       android:layout_centerInParent="true"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginLeft="200dp"
            android:src="@mipmap/food_menu1"
            android:layout_marginStart="200dp" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_toRightOf="@id/imageView1"
            android:src="@mipmap/food_menu1" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="-200dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@id/imageView1"
            android:src="@mipmap/food_menu2" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="104dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@id/imageView1"
            android:src="@mipmap/feedback2" />


        <TextView
            android:id="@+id/time_in_is"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView3"
            android:layout_marginLeft="300dp"

            android:layout_centerVertical="true"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:text="FOOD MENU"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />






        <TextView
            android:id="@+id/time_in_is2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView4"
            android:layout_toRightOf="@id/time_in_is"
            android:layout_marginLeft="180dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:text="FEEDBACK"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />




    </RelativeLayout>




</RelativeLayout>



