<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@mipmap/tt2">





    <RelativeLayout
        android:id="@+id/mknj"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/tt2">

        <Button
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/cust_border_black_radius_10_withborder"
            android:fontFamily="@font/arial"
            android:text="Back"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textStyle="bold" />


        <com.github.angads25.toggle.LabeledSwitch
            android:id="@+id/iv_toggle"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="660dp"
            android:textSize="14sp"
            app:colorOn="#2a3895"
            app:colorBorder="#2a3895"
            app:textOn="EN"
            app:textOff="AR"/>



        <RelativeLayout
            android:layout_width="565dp"
            android:layout_gravity="center"
            android:id="@id/mknj"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:layout_height="350dp">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
               android:background="@color/colorPrimaryDark"
                android:layout_width="575dp"
                android:layout_marginTop="0dp"
                android:layout_height="350dp" />



            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="275dp"
                android:layout_marginLeft="410dp"
                android:src="@mipmap/left_arrow" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="275dp"
                android:layout_toRightOf="@id/imageView4"
                android:src="@mipmap/right_arrow" />

        </RelativeLayout>



        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_1"
            android:layout_width="650dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/mknj"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Halwa Puri - Ingredients Details:"
                android:textColor="#640a0c"
                android:textSize="27sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_2"
            android:layout_below="@id/cardView_1"
            android:layout_width="wrap_content"
            android:layout_marginLeft="40dp"

            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AED: 10"
                android:textColor="#640a0c"
                android:textSize="27sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_3"
            android:layout_width="665dp"
            android:layout_below="@id/cardView_2"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="40dp"
            android:layout_height="240dp"
            android:gravity="start"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="40dp">


            <TextView
                android:id="@+id/textView_3"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="A hamburger (short: burger) is a sandwich consisting of one or more cooked patties of ground meat, usually beef, placed inside a sliced bread roll or bun. The patty may be pan fried, grilled, or flame broiled. Hamburgers are often served with cheese, lettuce, tomato, onion, pickles, bacon, or chiles; condiments such as ketchup, mayonnaise, mustard, relish and are frequently placed on sesame seed buns. A hamburger topped with cheese is called a cheeseburger."
                android:textColor="#c1977e"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif"
                android:gravity="fill_horizontal">

            </TextView>

        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/textView_34"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/cardView_3"
            android:layout_marginLeft="40dp"
            android:text=" Breakfast:"
            android:textStyle="bold"
            android:textColor="#2C0101"
            android:textSize="20sp"
            app:fontFamily="sans-serif"/>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:paddingBottom="0dp"
            android:layout_marginTop="42dp"
            android:layout_height="250dp"
            android:layout_below="@+id/cardView_3"
            android:layout_marginStart="40dp" />



    </RelativeLayout>
</RelativeLayout>


