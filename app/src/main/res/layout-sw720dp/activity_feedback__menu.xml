<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/tt2">
    <!--<Button-->
        <!--android:id="@+id/backbtn"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="10dp"-->
        <!--android:background="@android:color/black"-->
        <!--android:text="BACK"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:textSize="24sp"-->
        <!--android:textStyle="bold" />-->

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/logoss"
        android:layout_marginLeft="20dp" />



    <com.github.angads25.toggle.LabeledSwitch
        android:id="@+id/iv_toggle"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        app:colorOn="#2a3895"
        app:colorBorder="#2a3895"
        app:textOn="EN"
        app:textOff="AR"
        android:layout_marginLeft="605dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_marginTop="330dp"
        android:layout_marginBottom="20dp"
        android:text="We value your feedback!"
        android:textColor="@android:color/black"
        android:textSize="55dp"
        android:fontFamily="@font/arial"
        android:textAlignment="center"/>



    <EditText
        android:id="@+id/customer_info"
        android:layout_width="430dp"
        android:layout_height="70.0dip"
        android:layout_below="@id/textView"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="185dp"
        android:maxLines="1"
        android:textSize="18sp"
        android:inputType="textEmailAddress"
       android:hint="Email Address"
        android:background="@mipmap/password"
        android:fontFamily="@font/arial"
        android:padding="25dp"
        android:paddingStart="25dp"
        android:paddingLeft="5dp" />


    <EditText
        android:id="@+id/customer_info2"
        android:layout_width="430dp"
        android:layout_height="70.0dip"
        android:layout_below="@id/customer_info"
        android:maxLength="12"
        android:layout_marginLeft="185dp"
        android:layout_marginBottom="20dp"
        android:inputType="phone"
        android:maxLines="1"
        android:hint="Contact Number"
        android:textSize="18sp"
        android:background="@mipmap/password"
        android:fontFamily="@font/arial"
        android:padding="25dp"
        android:paddingStart="25dp"
        android:paddingLeft="25dp" />


    <Button
        android:id="@+id/home"
        android:layout_width="200dp"
        android:layout_height="50.0dip"
        android:layout_below="@id/customer_info2"
        android:layout_marginLeft="198dp"
        android:background="@drawable/cust_border_black_radius_10_withborder"
        android:fontFamily="@font/arial"
        android:text="Home"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textStyle="bold" />




    <Button
        android:id="@+id/next"
        android:layout_width="190dp"
        android:layout_height="50.0dip"
        android:layout_below="@id/customer_info2"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"

        android:layout_toRightOf="@id/home"
        android:background="@drawable/cust_border_black_radius_10_withborder"
        android:fontFamily="@font/arial"
        android:text="Next"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textStyle="bold" />


</RelativeLayout>